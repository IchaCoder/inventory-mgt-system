<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<VBox prefHeight="530.0" prefWidth="625.0" stylesheets="@../../../style2.css" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group.SalesController">
   <children>
      <HBox>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label fx:id="salesLabel" minWidth="80.0" styleClass="pharm" text="Sales" />
            <Region prefWidth="200.0" />
            <Label fx:id="salesLabel1" layoutX="30.0" layoutY="30.0" text="Sales list as on 20/04/2023" />
         </children>
      </HBox>
      <VBox fx:id="salesBox" maxWidth="800.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox>
               <children>
                  <Label styleClass="code" text="Code:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField promptText="Enter purchase No" styleClass="saleInput">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
                  <Region minWidth="100.0" />
                  <Label layoutX="30.0" layoutY="10.0" styleClass="code" text="Date:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField layoutX="71.0" layoutY="10.0" promptText="Enter purchase date" styleClass="saleInput">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </padding>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <TableView fx:id="salesTable" minHeight="300.0">
                    <columns>
                      <TableColumn fx:id="name" prefWidth="75.0" text="Drug Name" />
                      <TableColumn fx:id="id" prefWidth="75.0" text="id" />
                        <TableColumn fx:id="category" prefWidth="75.0" text="category" />
                        <TableColumn fx:id="quantity" prefWidth="75.0" text="quantity" />
                    </columns>
                  </TableView>
                  <VBox prefHeight="300.0" prefWidth="180.0">
                     <children>
                        <Label layoutX="30.0" layoutY="30.0" styleClass="addPurchaseHead" text="Add Purchase" />
                        <Label layoutX="30.0" layoutY="30.0" text="Category:">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </Label>
                        <ComboBox fx:id="categoryInput" layoutX="30.0" layoutY="52.0" prefWidth="150.0" promptText="Choose Category" styleClass="addDrugCombo">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Pain Killer" />
                                 <String fx:value="Dewormer" />
                                 <String fx:value="Blood Tonic" />
                              </FXCollections>
                           </items>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </ComboBox>
                        <Label layoutX="30.0" layoutY="97.0" text="Medicine">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="nameInput" promptText="Enter medicine name">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <Label layoutX="30.0" layoutY="164.0" text="Quantity">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="quantityInput" promptText="Enter quantity">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <Button id="handleAddDrug" fx:id="addPurchase" mnemonicParsing="false" onAction="#handleAddDrug" text="Add Purchase">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                           </padding>
                        </Button>
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>
   </children>

</VBox>
